<%- include('../admin/header') %>

<%- include('../admin/aside') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h4>  <i class="nav-icon fas fa-th"></i> List product</h4>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>
  <section class="content">
    <!-- Default box -->
    <div class="card">
      <div class="card-body">
        <div class="list" style="display: flex; justify-content: space-between;">
          <div class="item">
            <form action="" method="get" class="form-inline">
              <div class="form-group">
                <input class="form-control" name="key" placeholder="Search...">
              </div>
    
              <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
            </form>
          </div>
          <div class="item">
            <a href="/create-product" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Add</a>
          </div>
        </div>
        <hr>
        <div class="container">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>id</th>
                <th>name</th>
                <th>price</th>
                <th>sale_price</th>
                <th>content</th>
                <th>category_id</th>
                <th>status</th>
                <th>image</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% pro.forEach(item =>{ %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td><%= item.sale_price %></td>
                <td><%= item.content %></td>
                <td><%= item.category_id %></td>
                <td><%= item.status== 1 ? '1' : '0' %></td>
                <td><img src="/images/<%= item.image %>" width="60px" alt=""></td>
                <td class="text-right">
                  <a href="/edit-product<%= item.id %>" class="btn btn-sm btn-success"><i class="fa fa-edit"></i> edit</a>
                  <a href="/delete-product<%= item.id %>"  onclick="return confirm('Are you sure you want to delete it?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
          <div class="card-tools">
            <ul class="pagination pagination-sm">
              <li class="page-item"><a href="/list-product/?page=<%= _page > 1 ? _page-1 : 1 %>" class="page-link">&laquo;</a></li>
              <% for(i=1; i<= totalPage;i++){ %>
              <li class="<% _page == i ? 'active' : '' %>"><a href="/list-product/?page=<%= i %>" class="page-link"><%= i %></a></li>
              <% } %>
              <li class="page-item"><a href="/list-product" class="page-link">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div> <!-- /.card -->

  </section>
</div>

<%- include('../admin/footer') %>