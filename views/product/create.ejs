<%- include('../admin/header') %>

<%- include('../admin/aside') %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h4>  <i class="nav-icon fas fa-th"></i> Create product</h4>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>
  <section class="content">
    <!-- Default box -->
    <div class="card">
      
        <div class="col-md-6">
          <form action="/create-product/store" method="post" enctype="multipart/form-data">
            <div class="card-body">
              <div class="mb-3 mt-3">
                <input type="text" class="form-control" placeholder="Enter name" name="name" required>
              </div>
              <div class="mb-3 mt-3">
                <input type="file" class="form-control" placeholder="Enter image" name="image" required>
              </div>
              <div class="mb-3 mt-3">
                <input type="number" class="form-control" placeholder="Enter price" name="price" required>
              </div>
              <div class="mb-3 mt-3">
                <input type="number" class="form-control" placeholder="Enter sale_price" name="sale_price" required>
              </div>
              <div class="mb-3 mt-3">
                <input type="text" class="form-control" placeholder="Enter content" name="content" required>
              </div>
              <div class="mb-3 mt-3">
                <input type="text" class="form-control" placeholder="Enter category_id" name="category_id" required>
              </div>
              <div class="form-check">
                <label for="">Chose status</label>
                <div class="radio">
                  <label>
                    <input type="radio" name="status" value="1" checked="checked">
                    Show
                  </label>
                  <label>
                    <input type="radio" name="status" value="0">
                    Hidden
                  </label>
                </div>
              </div>
            </div>
            <div class="" style="display: flex; justify-content: space-between; margin: 14px 20px;">
              <div class="item">
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> Save</button>
              </div>
              <div class="item">
                <a href="/list-product" class="btn btn-primary btn-sm"><i class="fa fa-arrow-left"></i> back</a>
              </div>
            </div>
          </form>
        </div>

    </div>
</div>
<!-- /.card -->

</section>
</div>
<%- include('../admin/footer') %>